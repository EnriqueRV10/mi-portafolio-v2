---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Sergio Rivera - Frontend Developer",
  description = "Portfolio de Sergio Rivera, desarrollador frontend especializado en React, Next.js y tecnolog√≠as web modernas.",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- PWA y mobile optimization -->
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="theme-color" content="#10b981" />

    <!-- Viewport fit para safe areas -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover, user-scalable=no"
    />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
